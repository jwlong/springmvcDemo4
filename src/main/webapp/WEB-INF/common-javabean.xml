<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd
        http://www.springframework.org/schema/mvc
        http://www.springframework.org/schema/mvc/spring-mvc.xsd">
    <bean id="stoneAxe" class="com.dxfjyygy.test.test1.StoneAxe" />
    <bean id="chinese" class="com.dxfjyygy.test.test1.Chinese">
        <property name="axe">
            <ref bean="stoneAxe"/>
        </property>
    </bean>
    <bean id="personService" class="com.dxfjyygy.test.service.PersonServiceImpl">
        <property name="chinese">
            <ref bean="chinese" />
        </property>

    </bean>
    <bean id="userService" class="com.dxfjyygy.test.service.UserServiceImpl" >
        <property name="userDao">
            <ref bean="userDao" />
        </property>
    </bean>
    <bean id="userDao" class="com.dxfjyygy.test.dao.UserDaoImpl">
        <property name="sessionFactory">
            <ref bean="sessionFactory" />
        </property>
    </bean>

<!--
    <context:component-scan base-package="com.dxfjyygy.test.service"/>
    <context:component-scan base-package="com.dxfjyygy.test.dao"/>-->
</beans>